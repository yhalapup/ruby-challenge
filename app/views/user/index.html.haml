.pt-5
.container
  .pt-2.text-end
    = link_to 'Create User', new_user_path, class: 'btn btn-primary'
  %table.table
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} First name
        %th{:scope => "col"} Last name
        %th{:scope => "col"} email
        %th{:scope => "col"}
    %tbody
      - @users.each do |user|
        %tr
          %th{:scope => "row"} 1
          %td= user.first_name
          %td= user.last_name
          %td= user.email
          %td.text-end.pe
            %span
              = link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-info me-3'
              = link_to 'Remove', user_path(user), method: :delete, class: 'button btn btn-outline-danger'
